<div class="jumbotron">
  <h2>Edit Profile</h2>
    <div class="login span8 offset1">

      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal' }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :company %>
        <%= f.input :job %>
        <%= f.input :password, label: "New Password", autocomplete: "off" %>
        <%= f.input :password_confirmation, label: "New Password Confirmation", autocomplete: "off" %>
        <%= f.input :current_password %>

        <div class="form-actions">
          <%= f.submit "Update", class: "btn btn-primary btn-large"%>
        </div>

        <% end %>
      </div>

      <center><small><%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></small></center>

      <center><small><%= link_to "Home", :back %></small></center>
    </div>